{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Basket.Api",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/src/baskets/Basket.Api/bin/Debug/net6.0/Basket.Api.dll",
            "args": [],
            "cwd": "${workspaceFolder}/src/baskets/Basket.Api",
            "stopAtEntry": false,
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            },
            "sourceFileMap": {
                "/Views": "${workspaceFolder}/Views"
            }
        }
    ]
}